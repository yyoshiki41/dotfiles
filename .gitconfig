[include]
        path = ~/.gitconfig.local
[core]
        excludesfile = ~/.gitignore_global
[color]
        ui = auto

[alias]
        alias = !git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\\\t => \\2/' | sort
        st = status
        sh = show
        ft = fetch
# log (lg)
        lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
        lga = log --graph --date=iso --name-status --pretty=format:'%C(red)%h %C(green)%an %C(blue)%ad %Creset%s %C(yellow)%d%Creset'
        story = log --graph --branches --pretty=format:'%C(yellow)%h%C(cyan)%d%Creset %s %C(green)- %an, %cr%Creset'
# branch (b)
        br  = branch
        ba  = branch -a
# commit (c)
        c   = commit
        ca  = commit -a
        cm  = commit -m
# checkout (ch)
        ch  = checkout
        chb = checkout -b
        chm = checkout master
        chd = checkout develop
# pull (pl)
        pl = pull
        plo = pull origin
# push (ps)
        ps = push
        pso = push origin
